{
  "name": "@sammons/typed-mind-cli",
  "version": "1.0.0",
  "description": "Command-line interface for TypedMind DSL - a declarative language for building software architectures",
  "keywords": [
    "cli",
    "command-line",
    "typedmind",
    "dsl",
    "domain-specific-language",
    "architecture",
    "parser",
    "validator",
    "renderer",
    "ast",
    "visualization"
  ],
  "author": "sammons",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sammons2/typed-mind-lang"
  },
  "homepage": "https://github.com/sammons2/typed-mind-lang#readme",
  "bugs": {
    "url": "https://github.com/sammons2/typed-mind-lang/issues"
  },
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "bin": {
    "typed-mind": "./dist/cli.cjs",
    "tmd": "./dist/cli.cjs"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsc --build --watch",
    "clean": "rm -rf dist *.tsbuildinfo *.tgz .tsup",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "pnpm run build",
    "prepack": "pnpm run lint && pnpm run typecheck",
    "build:check": "pnpm run build && node dist/cli.cjs --help",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run lint && pnpm run typecheck && pnpm test",
    "validate:package": "npx publint && npx attw --pack .",
    "release:dry": "pnpm run build && pnpm run validate:package && npm publish --dry-run"
  },
  "dependencies": {
    "@sammons/typed-mind": "workspace:*",
    "@sammons/typed-mind-renderer": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.18.1",
    "tsup": "^8.3.5",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
