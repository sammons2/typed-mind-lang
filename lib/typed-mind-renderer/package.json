{
  "name": "@sammons/typed-mind-renderer",
  "version": "1.0.0",
  "description": "Enterprise-grade interactive renderer for TypedMind DSL with advanced visualization, performance optimization, pattern recognition, and comprehensive architectural analysis",
  "keywords": [
    "typedmind",
    "dsl",
    "renderer",
    "visualization",
    "d3",
    "html",
    "architecture-diagram",
    "performance",
    "virtualization",
    "pattern-recognition",
    "metrics",
    "diff-visualization",
    "code-generation",
    "plugins"
  ],
  "author": "sammons",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sammons2/typed-mind-lang"
  },
  "homepage": "https://github.com/sammons2/typed-mind-lang#readme",
  "bugs": {
    "url": "https://github.com/sammons2/typed-mind-lang/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./advanced": {
      "types": "./dist/advanced-renderer.d.ts",
      "default": "./dist/advanced-renderer.js"
    },
    "./performance": {
      "types": "./dist/performance/spatial-index.d.ts",
      "default": "./dist/performance/spatial-index.js"
    },
    "./validation": {
      "types": "./dist/validation/error-visualization.d.ts",
      "default": "./dist/validation/error-visualization.js"
    },
    "./plugins": {
      "types": "./dist/plugins/plugin-system.d.ts",
      "default": "./dist/plugins/plugin-system.js"
    },
    "./metrics": {
      "types": "./dist/metrics/graph-metrics.d.ts",
      "default": "./dist/metrics/graph-metrics.js"
    },
    "./patterns": {
      "types": "./dist/patterns/pattern-recognition.d.ts",
      "default": "./dist/patterns/pattern-recognition.js"
    },
    "./diff": {
      "types": "./dist/diff/diff-visualization.d.ts",
      "default": "./dist/diff/diff-visualization.js"
    },
    "./codegen": {
      "types": "./dist/codegen/code-generation.d.ts",
      "default": "./dist/codegen/code-generation.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc --build && npm run copy-static",
    "copy-static": "mkdir -p dist && cp -r src/static dist/",
    "dev": "tsc --build --watch",
    "clean": "rm -rf dist *.tsbuildinfo",
    "test": "vitest --run --passWithNoTests",
    "test:watch": "vitest --watch",
    "lint": "echo 'Skipping lint for now'",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "dependencies": {
    "@sammons/typed-mind": "workspace:*"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/node": "^22.18.1",
    "tsup": "^8.3.5",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
