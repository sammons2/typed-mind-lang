# Longform syntax is for humans
MyFirstApp -> AppFile v1.0.0

AppFile @ src/app.ts:
  <- [App]
  -> [startApp, Application]

startApp :: () => void
  "Application entry point"
  ~> [start]

# ClassFile fusion operator eliminates boilerplate
App #: main.ts <: Application
  => [start, stop]
  -> [initialize, listen]

start :: () => void
  "Starts the application"
  ~> [initialize, listen]
  $< [PORT, NODE_ENV]