{
  "name": "typed-mind",
  "displayName": "TypedMind DSL",
  "description": "Language support for TypedMind DSL - a declarative architecture description language with bidirectional validation",
  "version": "0.2.0",
  "private": true,
  "author": "sammons",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sammons2/typed-mind-lang"
  },
  "publisher": "sammons",
  "icon": "icon.png",
  "categories": [
    "Programming Languages",
    "Themes"
  ],
  "keywords": [
    "typedmind",
    "dsl",
    "architecture",
    "language",
    "syntax-highlighting",
    "accessibility",
    "colorblind-friendly"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "activationEvents": [
    "onLanguage:typedmind"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "typedmind",
        "aliases": [
          "TypedMind",
          "typedmind"
        ],
        "extensions": [
          ".tmd"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "typedmind",
        "scopeName": "source.typedmind",
        "path": "./syntaxes/typedmind.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "TypedMind Colorblind Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/typedmind-colorblind-dark.json"
      },
      {
        "label": "TypedMind Accessible Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/typedmind-accessible-dark.json"
      },
      {
        "label": "TypedMind Accessible Light",
        "uiTheme": "vs",
        "path": "./themes/typedmind-accessible-light.json"
      }
    ],
    "commands": [
      {
        "command": "typedmind.toggleFormat",
        "title": "Toggle Syntax Format",
        "category": "TypedMind"
      },
      {
        "command": "typedmind.preview",
        "title": "Preview TypedMind Visualization",
        "category": "TypedMind",
        "icon": "$(open-preview)"
      }
    ],
    "keybindings": [
      {
        "command": "typedmind.toggleFormat",
        "key": "ctrl+shift+alt+f",
        "mac": "cmd+shift+alt+f",
        "when": "editorTextFocus && resourceExtname == .tmd"
      },
      {
        "command": "typedmind.preview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorTextFocus && resourceExtname == .tmd"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "typedmind.toggleFormat",
          "when": "resourceExtname == .tmd",
          "group": "1_modification"
        },
        {
          "command": "typedmind.preview",
          "when": "resourceExtname == .tmd",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "typedmind.preview",
          "when": "resourceExtname == .tmd",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "typedmind.toggleFormat",
          "when": "resourceExtname == .tmd"
        },
        {
          "command": "typedmind.preview",
          "when": "resourceExtname == .tmd"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "TypedMind",
      "properties": {
        "typedmind.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "tsup",
    "bundle-lsp": "cd ../typed-mind-lsp && pnpm run build:bundled && cd - && rm -rf ./lsp-bundled && cp -r ../typed-mind-lsp/dist-bundled ./lsp-bundled",
    "dev": "tsup --watch",
    "package": "vsce package --no-dependencies",
    "clean": "rm -rf dist lsp-dist lsp-bundled node_modules *.vsix"
  },
  "dependencies": {
    "@sammons/typed-mind": "^0.1.8",
    "@sammons/typed-mind-lsp": "^0.1.8",
    "@sammons/typed-mind-renderer": "^0.2.1",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/vscode": "^1.99.0",
    "@vscode/vsce": "^3.2.1",
    "tsup": "^8.3.5",
    "typescript": "^5.9.2"
  }
}
